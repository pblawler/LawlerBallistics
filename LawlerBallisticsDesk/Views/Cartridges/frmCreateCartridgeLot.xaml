<Window x:Class="LawlerBallisticsDesk.Views.Cartridges.frmCreateCartridgeLot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LawlerBallisticsDesk.Views.Cartridges"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Cartridge Lot" Height="186" Width="320.667">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Height="28" Margin="48,102,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Height="28" Margin="159,102,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click_1"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="95,48,0,0" HorizontalContentAlignment="Center" 
            TextWrapping="Wrap" VerticalAlignment="Top" Width="122" Text="{Binding LotSize, StringFormat=\{0:n0\}, UpdateSourceTrigger=Default}"/>
        <Label Content="Number of Rounds" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="30" 
            FontWeight="Bold" Margin="95,18,0,0" VerticalAlignment="Top" Width="122"/>

    </Grid>
</Window>
